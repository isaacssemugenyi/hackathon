extends layout
block content
    .row
        .col-md-10
            h4 Username :  
                span #{name}
            h4 Total Balance : 
                span #{total}
            table.table.table-striped
                thead
                    tr
                        th Date Deposited
                        th Time
                        th Amount (EUR)

                    tbody
                        each deposit in deposits
                            tr
                                td #{moment(deposit.createdAt).format("DD-MM-YYYY")}
                                td #{moment(deposit.createdAt).format("hh:mm A")}
                                td #{deposit.amount}

