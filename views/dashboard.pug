extends layout
block content
  body
      .col-md-10
        h4 Username :  
          span #{name}
        h4 Total Balance : 
          span #{total}
        table.table.table-striped
          thead
            tr
              th Date Deposited
                br
                span (yy-mm-dd-hh)
              th Amount (EUR)

            tbody
              each deposit in deposits
                tr
                  td #{moment(deposit.createdAt).format("YYYY-MM-DD")}
                  td= deposit.amount

