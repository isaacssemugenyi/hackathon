extends layout
block content
    .row
        .col-sm-12
            .col-sm-10.d-flex.justify-content-around
                .col-sm-6.mt-5
                    div.p-4
                        img.img-fluid.image-home.planimg(src='./images/bank.png' alt='Responsive image')
                        .col-md-12.justify-content-center
                            form(method='POST' action='/deposit')
                                .form-group
                                    label(for='amount') Amount
                                    input#bamount.form-control(type='number' name="amount")
                                .form-group
                                    label(for='pin') Pin
                                    input#pin.form-control(type='password' name="pin")
                                br
                                button.btn.btn-primary.col-sm-12.bank-transfer-btn(onclick='bnotification();' type='submit') Transfer
                .col-sm-6.mt-5
                    div.p-4
                        img.img-fluid.image-home.planimg(src='./images/mobilepay.jpg' alt='Responsive image')
                        .col-md-12.justify-content-center
                            form(method='POST' action='deposit')
                                .form-group
                                    label(for='mm_amount') Amount
                                    input#exampleInputEmail1.form-control(type='number' aria-describedby='emailHelp' name='mm_amount')
                                .form-group
                                    label(for='exampleInputPassword1') Pin
                                    input#mamount.form-control(type='password')
                                br
                                button.btn.btn-primary.col-sm-12.bank-transfer-btn(onclick='bnotification()' type='submit') Transfer